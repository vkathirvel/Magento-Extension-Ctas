<config>

    <modules>
        <Optimiseweb_Ctas>
            <version>0.2.4</version>
        </Optimiseweb_Ctas>
    </modules>

    <admin>
        <routers>
            <ctas>
                <use>admin</use>
                <args>
                    <module>Optimiseweb_Ctas</module>
                    <frontName>ctas</frontName>
                </args>
            </ctas>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <Optimiseweb_Ctas>
                    <files>
                        <default>Optimiseweb_Ctas.csv</default>
                    </files>
                </Optimiseweb_Ctas>
            </modules>
        </translate>
        <layout>
            <updates>
                <ctas>
                    <file>optimiseweb_ctas.xml</file>
                </ctas>
            </updates>
        </layout>
        <menu>
            <optimiseweball translate="title" module="ctas">
                <title>Optimise Web</title>
                <sort_order>71</sort_order>
                <children>
                    <ctas translate="title" module="ctas">
                        <title>Calls to Action</title>
                        <sort_order>1</sort_order>
                        <children>
                            <managectas translate="title" module="ctas">
                                <title>Manage CTAs</title>
                                <sort_order>1</sort_order>
                                <action>ctas/adminhtml_ctas</action>
                            </managectas>
                            <settings translate="title" module="ctas">
                                <title>Settings</title>
                                <sort_order>2</sort_order>
                                <action>adminhtml/system_config/edit/section/optimisewebctas</action>
                            </settings>
                        </children>
                    </ctas>
                </children>
            </optimiseweball>
        </menu>
    </adminhtml>

    <global>

        <blocks>
            <ctas>
                <class>Optimiseweb_Ctas_Block</class>
            </ctas>
        </blocks>

        <helpers>
            <ctas>
                <class>Optimiseweb_Ctas_Helper</class>
            </ctas>
        </helpers>

        <models>
            <ctas>
                <class>Optimiseweb_Ctas_Model</class>
                <deprecatedNode>ctas_mysql4</deprecatedNode>
                <resourceModel>ctas_resource</resourceModel>
            </ctas>
            <ctas_resource>
                <class>Optimiseweb_Ctas_Model_Resource</class>
                <entities>
                    <ctas>
                        <table>ctas</table>
                    </ctas>
                    <ctas_products>
                        <table>ow_ctas_products</table>
                    </ctas_products>
                    <ctas_categories>
                        <table>ow_ctas_categories</table>
                    </ctas_categories>
                </entities>
            </ctas_resource>
        </models>

        <resources>
            <ctas_setup>
                <setup>
                    <module>Optimiseweb_Ctas</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ctas_setup>
            <ctas_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ctas_write>
            <ctas_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ctas_read>
        </resources>

    </global>
    
    <default>
        <optimisewebctas>
            <retina>
                <enabled>1</enabled>
                <dataattribute>data-at2x</dataattribute>
            </retina>
        </optimisewebctas>
    </default>

</config>