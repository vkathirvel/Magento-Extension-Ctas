<config>

    <modules>
        <Optimiseweb_Ctas>
            <version>0.2.0</version>
        </Optimiseweb_Ctas>
    </modules>

    <admin>
        <routers>
            <ctas>
                <use>admin</use>
                <args>
                    <module>Optimiseweb_Ctas</module>
                    <frontName>ctas</frontName>
                </args>
            </ctas>
        </routers>
    </admin>

    <adminhtml>
        <menu>
            <optimiseweball translate="title" module="ctas">
                <title>Optimise Web</title>
                <sort_order>71</sort_order>
                <children>
                    <ctas translate="title" module="ctas">
                        <title>Calls to Action</title>
                        <sort_order>1</sort_order>
                        <action>ctas/adminhtml_ctas</action>
                    </ctas>
                </children>
            </optimiseweball>
        </menu>
    </adminhtml>

    <global>

        <blocks>
            <ctas>
                <class>Optimiseweb_Ctas_Block</class>
            </ctas>
        </blocks>

        <helpers>
            <ctas>
                <class>Optimiseweb_Ctas_Helper</class>
            </ctas>
        </helpers>

        <models>
            <ctas>
                <class>Optimiseweb_Ctas_Model</class>
                <deprecatedNode>ctas_mysql4</deprecatedNode>
                <resourceModel>ctas_resource</resourceModel>
            </ctas>
            <ctas_resource>
                <class>Optimiseweb_Ctas_Model_Resource</class>
                <entities>
                    <ctas>
                        <table>ctas</table>
                    </ctas>
                </entities>
            </ctas_resource>
        </models>

        <resources>
            <ctas_setup>
                <setup>
                    <module>Optimiseweb_Ctas</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ctas_setup>
            <ctas_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ctas_write>
            <ctas_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ctas_read>
        </resources>

    </global>

</config>